# Server configuration
PORT=5000                          # Port for the backend server to listen on
NODE_ENV=development               # Environment: development, production, or test
FRONTEND_URL=http://localhost:3000 # URL of the frontend application
SESSION_SECRET=your-session-secret-key # Secret key for session encryption (use a strong random string)

# MongoDB configuration
MONGODB_URI=mongodb://localhost:27017/gitstatus # Connection string for MongoDB

# GitHub OAuth (Get these from GitHub Developer Settings -> OAuth Apps)
GITHUB_CLIENT_ID=your-github-client-id                           # OAuth App Client ID
GITHUB_CLIENT_SECRET=your-github-client-secret                   # OAuth App Client Secret
GITHUB_CALLBACK_URL=http://localhost:5000/api/auth/github/callback # OAuth callback URL

# OpenAI API (Get this from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key # OpenAI API key for commit analysis
OPENAI_MODEL=gpt-4o                # OpenAI model to use for analysis

# AWS S3 (Get these from AWS IAM)
AWS_ACCESS_KEY_ID=your-aws-access-key       # IAM user access key for S3 uploads
AWS_SECRET_ACCESS_KEY=your-aws-secret-key   # IAM user secret key
AWS_REGION=your-aws-region                  # AWS region for S3 bucket (e.g., us-east-1)
S3_BUCKET_NAME=your-bucket-name             # Name of S3 bucket for storing PDFs
